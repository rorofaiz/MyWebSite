<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <script  src="/js/mainData.js"></script>
    <link rel="stylesheet" href="/css/homeStyle.css">
</head>

<body class="flex_column">
    <%- include('partials/header.ejs') %>
    
    <div class="continer_ContactUs flex_column"  >
        <div class=""  style="width:100%;height:150px;" ><h1 style="margin:60px 0px 0px 20px;text-align: center" >Contact Us</h1></div> 
      
        <form class="contactUs_form flex_column" action="\contactUs" method="POST">

                   <div class="contInputStyle"><b>Name: </b><input class="inputStyle" type="text" name="name" placeholder="name" required/> </div>
                   <div class="contInputStyle"><b>Email:</b> <input class="inputStyle" type="email" name="email" placeholder="email" required/></div>
                   <div class="contInputStyle"><b>Phone:</b> <input class="inputStyle" type="tel" name="phone" placeholder="phone" required/></div>
                   <div style="width:100%;color:rgba(0,0,0,.5);margin-top:30px;">   
                        <b>Message:</b>
                        <textarea class="inputStyle" name="message" placeholder="message" style="all:unset;width:80%;height:150px;border-radius:0px;border:1px solid rgba(0,0,0,.3);margin:20px 0px 0px 80px;"></textarea>
                   </div>

                    <input class="btnsend" type="submit" name="btnSend" value="Send" > 
        </form>
    </div> 

    <%- include('partials/footer.ejs') %>

</body>
</html>